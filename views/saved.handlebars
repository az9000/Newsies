<div class="container">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Newsies</a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/saved">Saved Articles</a>
                </li>
            </ul>
        </div>
    </nav>


    <div class="card-deck">
        <div class="row">
            {{#each articles}}
            <div class="col-md-4 col-sm-6 mb-2 mt-2">
                <div class="card h-100">
                    <img class="card-img-top" src="{{this.img}}">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}
                        </h5>
                        <p class="card-text">{{this.summary}}</p>
                    </div>
                    <div class="card-footer">
                        <a href="/remove/{{this._id}}" class="btn btn-danger">Delete Article</a>
                        <a href="" onclick='return getNotes(this)' class="btn btn-primary" id={{this._id}}>Article
                            Notes</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="notes-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col" id='notes'>
                        
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label for="note-text">Note:</label>
                        <textarea class="form-control" rows="4" id='note-text'></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="saveNotes(this)">Save
                    note</button>
            </div>
        </div>
    </div>
</div>